<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPreviousChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/reader_settings_text_size"
            android:singleLine="true"
            android:text="@string/previous_chapter"
            android:textColor="@android:color/primary_text_dark" />

        <SeekBar
            android:id="@+id/sbTextProgress"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="0" />

        <TextView
            android:id="@+id/tvNextChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/reader_settings_text_size"
            android:singleLine="true"
            android:text="@string/next_chapter"
            android:textColor="@android:color/primary_text_dark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivContents"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/reader_settings_image_size"
            android:layout_weight="1"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_list"
            tools:ignore="ContentDescription" />

        <cc.aoeiuv020.panovel.text.CheckableImageView
            android:id="@+id/ivStar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/reader_settings_image_size"
            android:layout_weight="1"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_favorite_selector" />

        <ImageView
            android:id="@+id/ivDetail"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/reader_settings_image_size"
            android:layout_weight="1"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_info"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivRefresh"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/reader_settings_image_size"
            android:layout_weight="1"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_refresh"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivDownload"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/reader_settings_image_size"
            android:layout_weight="1"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_file_download"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivSettings"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/reader_settings_image_size"
            android:layout_weight="1"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_settings"
            tools:ignore="ContentDescription" />

    </LinearLayout>
</LinearLayout>
